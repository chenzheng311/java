package week2;

import java.util.Scanner;

public class jinzhita {

	public static void main(String[] args) {

		Scanner scan=new Scanner(System.in);
		System.out.println("请输入行数：");
		int m=scan.nextInt();
		for(int i=1;i<=m;i++){
			for(int j=1;j<=m-i;j++){
				System.out.print(" ");
			}
		for(int j=1;j<=i;j++)
		{
			System.out.print("* ");
		}
		System.out.println();
	}
	}

}


